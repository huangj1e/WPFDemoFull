<UserControl
    x:Class="WPFDemoFull.Modules.ControlLayout.Views.Layout.GridDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:WPFDemoFull.Core;assembly=WPFDemoFull.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDemoFull.Modules.ControlLayout.ViewModels.Layout"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance Type=local:GridDemoViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromRight}">
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Margin="15,0"
                    VerticalAlignment="Center"
                    FontSize="36"
                    FontWeight="Bold"
                    Text="{Binding ViewTitle}" />
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <materialDesign:Card
                        Grid.Row="{Binding GridInfo.Row}"
                        Grid.Column="{Binding GridInfo.Col}"
                        Margin="15">
                        <UniformGrid
                            Columns="2"
                            Rows="2">
                            <Button
                                Height="auto"
                                Margin="5"
                                Command="{Binding MoveToDefinitionCommand}"
                                CommandParameter="1">
                                <TextBlock
                                    FontSize="72"
                                    Text="1" />
                            </Button>
                            <Button
                                Height="auto"
                                Margin="5"
                                Command="{Binding MoveToDefinitionCommand}"
                                CommandParameter="2">
                                <TextBlock
                                    FontSize="72"
                                    Text="2" />
                            </Button>
                            <Button
                                Height="auto"
                                Margin="5"
                                Command="{Binding MoveToDefinitionCommand}"
                                CommandParameter="3">
                                <TextBlock
                                    FontSize="72"
                                    Text="3" />
                            </Button>
                            <Button
                                Height="auto"
                                Margin="5"
                                Command="{Binding MoveToDefinitionCommand}"
                                CommandParameter="4">
                                <TextBlock
                                    FontSize="72"
                                    Text="4" />
                            </Button>
                        </UniformGrid>
                    </materialDesign:Card>
                    <!--  水平  -->
                    <GridSplitter
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Height="10"
                        HorizontalAlignment="Stretch"
                        Background="Blue"
                        ResizeDirection="Rows">
                        <GridSplitter.Template>
                            <ControlTemplate>
                                <Border
                                    Background="#40000000"
                                    CornerRadius="5">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Text="•••" />
                                </Border>
                            </ControlTemplate>
                        </GridSplitter.Template>
                    </GridSplitter>
                    <!--  垂直  -->
                    <GridSplitter
                        Grid.RowSpan="3"
                        Width="10"
                        Margin="0"
                        ResizeDirection="Columns">
                        <GridSplitter.Template>
                            <ControlTemplate>
                                <Border
                                    Background="#40000000"
                                    CornerRadius="5">
                                    <materialDesign:PackIcon
                                        Width="25"
                                        Height="25"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="MoreVert" />
                                </Border>
                            </ControlTemplate>
                        </GridSplitter.Template>
                    </GridSplitter>
                    <!--  设置 GridSplitter 的高度  -->
                    <!--  在第二行和第三行之间添加一个 GridSplitter  -->

                </Grid>
            </Grid>
        </ScrollViewer>
    </materialDesign:TransitioningContent>

</UserControl>
